<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>

                                <th scope="col">ROOM NAME</th>
                                <th scope="col">NO OF BEDS</th>
                                <th scope="col">RENT / BED</th>
                                <th scope="col">TENANTS</th>
                                <th scope="col">EDIT</th>
                                <th scope="col">DELETE</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                            <tr>
                                <td class="tm-product-name">{{this.name}}</td>
                                <td> {{this.bedCount}} </td>
                                <td> {{this.rent}} </td>
                                <td> {{this.tenants}} </td>
                                <td>
                                    <a href="rooms/update/{{this._id}}" class="tm-product-delete-link">
                                        <i class="fas fa-pencil-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="rooms/delete/{{this._id}}" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a href="/rooms/add" class="btn btn-primary btn-block text-uppercase mb-3">Add New Room</a>

            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
                <h2 class="tm-block-title">Payment Management</h2>
                <div class="tm-product-table-container">

                </div>
                <!-- table container -->
                <a class="btn btn-primary btn-block text-uppercase mb-3" href="/payments/add">
                    Add Payment
                </a>
                <div id="payment-form">
                    <div class="form-group mb-3">
                        <label for="roomAlloted">Room Alloted</label>
                        <select class="custom-select tm-select-accounts" id="roomAlloted" name="roomAlloted">
                            <option selected>Select Room</option>
                            {{#each roomData}}
                            <option value="{{this.name}}">{{ this.name }}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="roomAlloted">Room Alloted</label>
                        <select class="custom-select tm-select-accounts" id="roomAlloted" name="roomAlloted">
                            <option selected>Select Room</option>
                            {{#each roomData}}
                            <option value="{{this.name}}">{{ this.name }}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>